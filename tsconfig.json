{
	"compileOnSave": true,
	"compilerOptions": {
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2017",
		"sourceMap": true,
		"baseUrl": "./",
		"incremental": true,
		"allowJs": true,
		"esModuleInterop": true,
		"lib": ["ES2017", "DOM"],
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./build",
		"preserveConstEnums": true,
		"resolveJsonModule": true,
		"strict": true,
		"paths": {}
	},
	"include": ["src/**/*", "src/**/*.json"],
	"exclude": ["node_modules", "test/**/*", "config/*", "package.json", "src/**/*.test.js", "src/**/*.test.ts"]
}
